<head>
  <meta charset="utf-8">

  {% include "components/meta.njk" %}

  <link rel="dns-prefetch" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com/" crossorigin>
  <link href="https://fonts.googleapis.com/css?family=Poppins:400,600&amp;display=swap&amp;subset=latin-ext" rel="stylesheet">
  {% set css %}
    {% include "assets/css/inline.css" %}
  {% endset %}
  <style>{{ css | cssmin | safe }}</style>
  
  {# commenting out the netlify stuff
    <link rel="preload" href="https://identity.netlify.com/v1/netlify-identity-widget.js" as="script" crossorigin>
    <script async src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
    {% set js %}
      {% include "assets/js/inline.js" %}
    {% endset %}
    <script>{{ js | jsmin | safe }}</script>
  #}
  
  {% include "components/app.html" %}
  
  <meta name="viewport" content="width=device-width, initial-scale=1"/>
  <meta name="MobileOptimized" content="width">
  <meta name="HandheldFriendly" content="true">

  {# do we want webmentions?
    <link rel="webmention" href="https://webmention.io/webwewant.fyi/webmention">
    <link rel="pingback" href="https://webmention.io/webwewant.fyi/xmlrpc">
  #}

  {% if javascript.head %}
    {% for js in javascript.head %}
      <script src="{{ js }}" async></script>
    {% endfor %}
  {% endif %}
</head>
